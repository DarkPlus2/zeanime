datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Anime {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  image       String
  category    String    // TV, Movie
  episodes    Episode[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Episode {
  id       Int    @id @default(autoincrement())
  title    String
  server   String // Abyss.to, Filemoon.sx
  url      String // Embed URL
  animeId  Int
  anime    Anime  @relation(fields: [animeId], references: [id])
}
