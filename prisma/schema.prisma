model Anime {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  image       String?
  coverImage  String?
  category    String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  episodes    Episode[]
}

model Episode {
  id         Int      @id @default(autoincrement())
  title      String
  number     Int
  embedUrl1  String?
  embedUrl2  String?
  embedUrl3  String?
  animeId    Int
  anime      Anime    @relation(fields: [animeId], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
